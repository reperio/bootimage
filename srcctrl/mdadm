##
# Get a known-good copy of:
# mdadm
# 

. ./functions

FILENAME='mdadm-3.1.4.tar.bz2'
URL='http://www.kernel.org/pub/linux/utils/raid/mdadm/mdadm-3.1.4.tar.bz2'
DIRNAME='mdadm-3.1.4'

BINARIES="\
mdadm"

build () {
  checkdone
  cd ${SRCDIR}/${DIRNAME}
  make clean
  make
  if [ $? != 0 ]; then
    return 1
  fi
  markdone
}

$1 $2

if [ $? != 0 ]; then
  printf 'Source control script %s failed on function %s' $0 $1
  exit 1
fi


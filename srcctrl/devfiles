##
# This file is a hack to create the device files needed for early init
# until udev gets up and running
#

fetch () {
  return 0
}

unpack () {
  return 0
}

build () {
  return 0
}

install () {
  mkdir ${STAGEDIR}/dev
  mkdir ${STAGEDIR}/dev/pts
  mknod -m 0600 ${STAGEDIR}/dev/console c 5 1
  mknod ${STAGEDIR}/dev/null c 1 3
}

$1 $2

if [ $? != 0 ]; then
  printf 'Source control script %s failed on function %s' $0 $1
    exit 1
fi


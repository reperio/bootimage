##
# Get a known-good copy of:
# SYSLINUX
# 

. ./functions

FILENAME='syslinux-3.63.tar.bz2'
URL='http://www.kernel.org/pub/linux/utils/boot/syslinux/syslinux-3.63.tar.bz2'
DIRNAME='syslinux-3.63'

fetch () { 
  get ${URL}
}

unpack () {
  cd ${SRCDIR}
  tar xvjf ${FILENAME}
}

build () {
  cd ${SRCDIR}/${DIRNAME}
  ./configure
  make
}

$1 $2

if [ $? != 0 ]; then
  printf 'Script %s failed on function %s' $0 $1
  exit 1
fi

